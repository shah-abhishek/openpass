{
  "name": "openpass",
  "private": true,
  "workspaces": ["apps/*", "packages/*"],
  "scripts": {
    "dev": "pnpm -r --parallel run dev",
    "build": "pnpm -r run build",
    "lint": "pnpm -r run lint",
    "typecheck": "pnpm -r run typecheck",
    "format": "prettier -w .",
    "start:idp": "pnpm --filter @openpass/idp start",
    "dev:idp": "pnpm --filter @openpass/idp dev",
    "dev:next": "pnpm --filter @openpass/next-example dev",
    "dev:express": "pnpm --filter @openpass/express-api dev"
  },
  "devDependencies": {
    "prettier": "^3.3.3",
    "typescript": "^5.6.3"
  },
  "packageManager": "pnpm@9.12.0"
}
